<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyManagerAssistance.Style">
    <!-- Color Resouce -->
    <SolidColorBrush x:Key="AppBackgroundColorBrush" Color="#ECF0F1"></SolidColorBrush>
    <SolidColorBrush x:Key="AppForegroundColorBrush" Color="#3B79A9"></SolidColorBrush>
    <SolidColorBrush x:Key="AppModuleBrush" Color="#FFFFFF"></SolidColorBrush>
    <!-- Data Template -->
    <DataTemplate x:Key="HubHeaderTemplate">
        <StackPanel>
            <TextBlock Text="{Binding}" FontSize="50" Margin="0 10 0 0" Foreground="{StaticResource AppForegroundColorBrush}"></TextBlock>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="HubSectionHeaderTemplate">
        <TextBlock Text="{Binding}" FontSize="40" Margin="0 20 0 0" Foreground="{StaticResource AppForegroundColorBrush}"></TextBlock>
    </DataTemplate>

    <DataTemplate x:Key="CommonPivotTitleTemplate">
        <TextBlock Text="{Binding}" FontSize="20" Margin="0 0 0 0" Foreground="{StaticResource AppForegroundColorBrush}"></TextBlock>
    </DataTemplate>
    
    <DataTemplate x:Key="CommonPivotHeaderTemplate">
        <TextBlock Text="{Binding}" FontSize="25" Margin="0 10 0 0" Foreground="{StaticResource AppForegroundColorBrush}"></TextBlock>
    </DataTemplate>
    
</ResourceDictionary>
